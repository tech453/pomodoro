function stop(){
    clearInterval(timer);
    is_counting=false;
    if(is_work && get_timer_string()=="00:00"){
        work_count+=1;
        is_work=false;
        if(work_count%4!=0){
            minute_string=("0"+String(short_break)).slice(-2);
        }else{
            minute_string=("0"+String(long_break)).slice(-2);
        }
        second_string="00";
        set_timer_string();
        
    }
    if(!is_work && get_timer_string()=="00:00"){
        is_work=true;
        minute_string=("0"+String(work)).slice(-2);
        second_string="00";
        set_timer_string();
    }

    
    start_button.disabled=false;
    oscillator.stop();
    isPlaying = false;
}

stop();